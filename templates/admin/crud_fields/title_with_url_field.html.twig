{% set page = entity.instance %}
{# Return snake case entity name BlogCategory -> blog_category #}
{% set entity_name = ea.entity.name|u.snake %}
{% set url = path('app_' ~ entity_name ~ '_show', {'url': page.url}) %}

<span><b>{{ field.value }}</b></span><br>
<small>URL: <a href="{{ url }}" class="text-decoration-underline">{{ url }}</a></small>